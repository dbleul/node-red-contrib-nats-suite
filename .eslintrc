{
  "extends": [
    "standard"
  ],
  "env": {
    "node": true,
    "es2022": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "prefer-const": "error",
    "no-var": "error",
    "no-undef": "error",
    "no-redeclare": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    "*.min.js",
    "dist/",
    "coverage/"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "extends": [
        "standard",
        "@typescript-eslint/recommended"
      ],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"],
      "rules": {
        "@typescript-eslint/no-unused-vars": "warn",
        "@typescript-eslint/explicit-function-return-type": "off",
        "@typescript-eslint/no-explicit-any": "warn"
      }
    }
  ]
}
  